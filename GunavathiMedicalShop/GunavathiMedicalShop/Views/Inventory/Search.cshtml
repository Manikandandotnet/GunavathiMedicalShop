@model IEnumerable<GunavathiMedicalShop.Models.InventoryModel>

@{
    ViewBag.Title = "Search";
}

<h4 class="text-center mt-5 mb-5" style="color:chocolate">Search Inventory Information</h4>
<hr />
<p>
    @Html.ActionLink("Go To Index", "Index")
</p>


@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="offset-5">
        <div class="form-group text-dark">
            <label for="Search">Search Stocks</label>
            <input type="search" class="form-control" name="Search" placeholder="Search Stock Level" />
        </div>


        <div class="form-group mt-2 mb-5">

            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-success" />
            </div>


        </div>

    </div>

}






<table class="table table-primary table-hover">
    <tr style="vertical-align:middle">
        <th>
            @Html.DisplayNameFor(model => model.Stocklevels)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Reorderpoints)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SupplierInfo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BatchNo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="vertical-align:middle">
            <td>
                @Html.DisplayFor(modelItem => item.Stocklevels)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reorderpoints)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierInfo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BatchNo)
            </td>
            <td>
            </td>
        </tr>
    }

</table>
