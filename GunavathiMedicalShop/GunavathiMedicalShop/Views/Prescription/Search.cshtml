@model IEnumerable<GunavathiMedicalShop.Models.Prescription>

@{
    ViewBag.Title = "Search";
}

<h4 class="text-center mt-5 mb-5" style="color:chocolate">Search Prescription Details</h4>
<hr />

<p>
    @Html.ActionLink("Go To Index", "Index")
</p>



@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })



    <div class="offset-5 text-dark">
    <div class="form-group">

        <label for="Search"> Search Your Data</label>
        <input type="search" name="Search" class="form-control" id="Search" placeholder="Search" />
    </div>

    <div class="form-group mt-2">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </div>



        </div>

}


<table class="table table-primary table-hover mt-5">
    <tr style="vertical-align:middle">
        <th>
            @Html.DisplayNameFor(model => model.CustomerID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DoctorID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Medication)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dosage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Frequency)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Duration)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="vertical-align:middle">
            <td>
                @Html.DisplayFor(modelItem => item.CustomerID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medication)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dosage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Frequency)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                    </td>
        </tr>
    }

</table>
