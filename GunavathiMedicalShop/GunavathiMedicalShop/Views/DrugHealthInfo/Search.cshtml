@model IEnumerable<GunavathiMedicalShop.Models.DrugHealthInfoModel>

@{
    ViewBag.Title = "Search";
}

<h4 class="text-center mt-5 mb-5">Search Drug Health Infoemation</h4>
<hr />
<p>
    @Html.ActionLink("Go To Index", "Index")
</p>


@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="offset-5">
        <div class="form-group text-dark">
            <label for="Search">Search Stocks</label>
            <input type="search" class="form-control" name="Search" placeholder="Search Stock Level" />
        </div>


        <div class="form-group mt-2 mb-5">

            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-success" />
            </div>


        </div>
    </div>


}


<table class="table table-primary table-hover">
    <tr style="vertical-align:middle">
        <th>
            @Html.DisplayNameFor(model => model.Medication)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Usageinstructions)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sideeffects)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Interactions)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="vertical-align:middle">
            <td>
                @Html.DisplayFor(modelItem => item.Medication)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usageinstructions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sideeffects)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Interactions)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })*@
            </td>
        </tr>
    }

</table>
