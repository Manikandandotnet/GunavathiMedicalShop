@model IEnumerable<GunavathiMedicalShop.Models.InventoryReportModel>

@{
    ViewBag.Title = "Index";
}

<h4 class="text-center mt-5 mb-5" style="color:chocolate">Inventory Report</h4>
<hr />



@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible " role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        @TempData["Message"]
    </div>
}



@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible " role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        @TempData["Error"]
    </div>
}












<p>
    @Html.ActionLink("Create New", "Create")
    &nbsp;&nbsp;&nbsp;&nbsp;
    @Html.ActionLink("Search", "Search")
</p>
<table class="table table-primary table-hover">
    <tr style="vertical-align:middle">
        <th>
            @Html.DisplayNameFor(model => model.Stocklevels)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Expirationdates)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Reorderpoints)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="vertical-align:middle">
            <td>
                @Html.DisplayFor(modelItem => item.Stocklevels)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Expirationdates)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reorderpoints)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>
