@model GunavathiMedicalShop.Models.PVerificationModel

@{
    ViewBag.Title = "Create";
}
<h4 class="text-center mt-5 mb-5" style="color:chocolate">Create Prescription Verification Details</h4>
<hr />



@using (Html.BeginForm("Create", "PVerification", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal offset-5 text-dark">
    
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group mt-3">
            @Html.LabelFor(model => model.PName, htmlAttributes: new { @class = "control-label col-md-6" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mt-3">
            @Html.LabelFor(model => model.PresimagePath, htmlAttributes: new { @class = "control-label col-md-6" })
            <div class="col-md-10">

                <input type="file" name="TEMP_PROFILE" class="form-control" accept=".png,.jpg,.jpeg" required />



                @Html.ValidationMessageFor(model => model.PresimagePath, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mt-3">
            @Html.LabelFor(model => model.verifystatus, htmlAttributes: new { @class = "control-label col-md-6" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.verifystatus, Model.StatusList, new { htmlAttributes = new { @class = "form-select" } })


                @Html.ValidationMessageFor(model => model.verifystatus, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mt-3">
            @Html.LabelFor(model => model.pharmacistnotes, htmlAttributes: new { @class = "control-label col-md-6" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.pharmacistnotes, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.pharmacistnotes, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mt-3">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div class="offset-5 mt-2">
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
