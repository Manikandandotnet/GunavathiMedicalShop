@model GunavathiMedicalShop.Models.PVerificationModel

@{
    ViewBag.Title = "Delete";
}

<h4 class="text-center mt-5 mb-5" style="color:chocolate">Delete Prescription Verification Details</h4>
<hr />
<h5 class="text-center" style="color:mediumseagreen">Are you sure you want to delete this?</h5>
<div class="offset-5 text-dark">
    
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.PName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PresimagePath)
        </dt>

        <dd>

            <img src="~/Content/PrescriptionImage/@Model.PresimagePath" height="100" style="border-radius:5px" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.verifystatus)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.verifystatus)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.pharmacistnotes)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pharmacistnotes)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color mt-3">
            <input type="hidden" name="profile" value="@Model.PresimagePath" />

            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
