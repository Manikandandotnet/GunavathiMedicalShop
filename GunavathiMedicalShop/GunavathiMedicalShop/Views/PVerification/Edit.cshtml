@model GunavathiMedicalShop.Models.PVerificationModel

@{
    ViewBag.Title = "Edit";
}

<h4 class="text-center mt-5 mb-5" style="color:chocolate">Edit Prescription Verification Details</h4>
<hr />

@using (Html.BeginForm("Edit", "PVerification", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal offset-5 text-dark">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)
        @Html.HiddenFor(model => model.PresimagePath)


        <img src="~/Content/PrescriptionImage/@Model.PresimagePath" height="100" style="border-radius:5px" />

        <div class="form-group mt-3">
            @Html.LabelFor(model => model.PName, htmlAttributes: new { @class = "control-label col-md-6" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PName, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                @Html.ValidationMessageFor(model => model.PName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mt-3">
            @Html.LabelFor(model => model.PresimagePath, htmlAttributes: new { @class = "control-label col-md-6" })
            <div class="col-md-10">


                <input type="file" name="TEMP_PROFILE" class="form-control" accept=".png,.jpg,.jpeg" />

                @Html.ValidationMessageFor(model => model.PresimagePath, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mt-3">
            @Html.LabelFor(model => model.verifystatus, htmlAttributes: new { @class = "control-label col-md-6" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.verifystatus, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.verifystatus, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mt-3">
            @Html.LabelFor(model => model.pharmacistnotes, htmlAttributes: new { @class = "control-label col-md-6" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.pharmacistnotes, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.pharmacistnotes, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mt-3">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div class="offset-5 mt-3">
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
