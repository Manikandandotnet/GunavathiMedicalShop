@model IEnumerable<GunavathiMedicalShop.Models.PVerificationModel>

@{
    ViewBag.Title = "Search";
}

<h4 class="text-center mt-5 mb-5" style="color:chocolate">Search Prescription Verification Details</h4>
<hr />
<p>
    @Html.ActionLink("Go To Index", "Index")
</p>




@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="offset-5 text-dark">
    <div class="form-group">

        <label for="Search"> Search Your Data</label>
        <input type="search" name="Search" class="form-control" id="Search" placeholder="Search" />
    </div>

    <div class="form-group mt-3">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </div>

        </div>
}


<table class="table table-primary table-hover mt-5">
    <tr style="vertical-align:middle">
        <th>
            @Html.DisplayNameFor(model => model.PName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PresimagePath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.verifystatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pharmacistnotes)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="vertical-align:middle">
            <td>
                @Html.DisplayFor(modelItem => item.PName)
            </td>
            <td>
                <img src="~/Content//PrescriptionImage/@item.PresimagePath" height="100" style="border-radius:5px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.verifystatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pharmacistnotes)
            </td>
            <td>
            </td>
        </tr>
    }

</table>
