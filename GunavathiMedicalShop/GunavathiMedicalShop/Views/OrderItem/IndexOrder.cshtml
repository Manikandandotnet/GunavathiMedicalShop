@model IEnumerable<GunavathiMedicalShop.Models.OrderModel>

@{
    ViewBag.Title = "IndexOrder";
}


<h4 style="color:chocolate" class="text-center mt-5 mb-5">Order Details</h4>
<hr />

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible " role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        @TempData["Message"]
    </div>
}



@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible " role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        @TempData["Error"]
    </div>
}











<p>
    @Html.ActionLink("Create New", "CreateOrder")

    &nbsp;&nbsp;&nbsp;&nbsp;

    @Html.ActionLink("Search", "SearchOrder")
</p>


<div class="position-relative">
    <div class="position-absolute bottom-0 end-0">
        <p>
            @Html.ActionLink("Previous Records", "Index")
        </p>

    </div>
</div>




<table class="table table-primary table-hover mt-5">
    <tr style="vertical-align:middle">
        <th>
            @Html.DisplayNameFor(model => model.OrderID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Orderdate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Paymentmethod)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Totalamount)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="vertical-align:middle">
            <td>
                @Html.DisplayFor(modelItem => item.OrderID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Orderdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paymentmethod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Totalamount)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditOrder", new { id = item.id }) |
                @Html.ActionLink("Details", "DetailsOrder", new { id = item.id }) |
                @Html.ActionLink("Delete", "DeleteOrder", new { id = item.id })
            </td>
        </tr>
    }

</table>
